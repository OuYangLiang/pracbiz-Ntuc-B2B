<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
    <package name="user" extends="pracbiz-default" namespace="/user"> 
        
        <action name="init" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="init">
            <result>/WEB-INF/views/core/user/summary.jsp</result>
        </action>
        
        
        <action name="search" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="search" >
            <result name="success" type="stream">
                <param name="inputName">neverMind</param>
            </result>
        </action>
        
        
        <action name="data" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="data">
            <result type="json">
                <param name="root">gridRlt</param>
                <param name="ignoreHierarchy">false</param>
            </result>
        </action>
        
        <action name="initAdd" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="initAdd">
            <result>/WEB-INF/views/core/user/create.jsp</result>
        </action>
        
        <action name="saveAdd" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="saveAdd">
            <interceptor-ref name="token"/>
            <interceptor-ref name="b2bportalDefaultStack"/>
			<interceptor-ref name="b2bportalCsrfStack"/>
            <result name="input">/WEB-INF/views/core/user/create.jsp</result>
            <result type="redirect">/user/init.action?keepSp=Y</result>
        </action>
        
        <action name="view" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="view">
            <result name="input">/WEB-INF/views/core/user/summary.jsp</result>
            <result name="view">/WEB-INF/views/core/user/view.jsp</result>
            <result name="viewPending">/WEB-INF/views/core/user/viewPending.jsp</result>
            <result name="viewPendingUpdate">/WEB-INF/views/core/user/viewPendingUpdate.jsp</result>
        </action>
        
        <action name="initEdit" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="initEdit">
            <result name="input">/WEB-INF/views/core/user/summary.jsp</result>
            <result>/WEB-INF/views/core/user/edit.jsp</result>
        </action>
        
        <action name="saveEdit" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="saveEdit">
            <interceptor-ref name="token"/>
            <interceptor-ref name="b2bportalDefaultStack"/>
			<interceptor-ref name="b2bportalCsrfStack"/>
           	<result name="input">/WEB-INF/views/core/user/edit.jsp</result>
            <result type="redirect">/user/init.action?keepSp=Y</result>
        </action>
        
        <action name="setPassword" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="setPassword">
            <interceptor-ref name="b2bPortalLoginStack"/>
            <result name="input">/WEB-INF/views/core/user/setPassword.jsp</result>
            <result>/WEB-INF/views/core/user/setPassword.jsp</result>
        </action>
        
        <action name="savePassword" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="savePassword">
            <interceptor-ref name="token"/>
            <interceptor-ref name="b2bPortalLoginStack"/>
			<result>/WEB-INF/views/core/user/setPassword.jsp</result>
			<result name="input">/WEB-INF/views/core/user/setPassword.jsp</result>
		</action>
        
        <action name="putParamIntoSession" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="putParamIntoSession">
			<result name="success" type="stream">
                <param name="inputName">neverMind</param>
            </result>
            <result name="error" type="json">
                <param name="root">mkErrorInfo</param>
                <param name="ignoreHierarchy">true</param>
            </result>
		</action>
		
        <action name="saveDelete" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="saveDelete">
			<interceptor-ref name="b2bportalDefaultStack"/>
			<interceptor-ref name="b2bportalCsrfStack"/>
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
        </action>
        
        <action name="initApprove" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="initConfirm">
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
            <result>/WEB-INF/views/core/user/confirm.jsp</result>
        </action>
        
        <action name="saveApprove" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="saveApprove">
			<interceptor-ref name="b2bportalDefaultStack"/>
			<interceptor-ref name="b2bportalCsrfStack"/>
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
        </action>
        
        <action name="initReject" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="initConfirm">
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
            <result>/WEB-INF/views/core/user/confirm.jsp</result>
        </action>
        
        <action name="saveReject" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="saveReject">
			<interceptor-ref name="b2bportalDefaultStack"/>
			<interceptor-ref name="b2bportalCsrfStack"/>
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
        </action>
        
        <action name="initWithdraw" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="initConfirm">
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
            <result>/WEB-INF/views/core/user/confirm.jsp</result>
        </action>
        
        <action name="saveWithdraw" class="com.pracbiz.b2bportal.core.action.UserProfileAction" method="saveWithdraw">
			<interceptor-ref name="b2bportalDefaultStack"/>
			<interceptor-ref name="b2bportalCsrfStack"/>
        	<result name="input">/WEB-INF/views/core/user/summary.jsp</result>
        </action>
    </package>
</struts>